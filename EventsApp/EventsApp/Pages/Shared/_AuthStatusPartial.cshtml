
@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-incline" asp-page="/Account/Logout">
        Welcome @User.Identity.Name
        <button type="submit" class="btn btn-link">Log out</button>   
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Account/Login">Log in</a>
}